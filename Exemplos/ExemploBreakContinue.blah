
// testatando a atualizacao do para e continue dentro do laço, ok.


inicio programa()	
	
	inteiro a = 1
	inteiro b = 0
	inteiro res
	
	enquanto a != 0   // testando a media de dois numeros, vai lendo teclado até o usuario digitar 0.
		leia a
		se a == 0
			para
		fim se
		res = res + a
		b = b + 1
	fim enquanto
	
	imprime res / b		//imprimindo a media.
	
	enquanto 1 > 0
		imprime 'ok'
		para			// testando utilização do para "break".
	fim enquanto
		
fim programa





